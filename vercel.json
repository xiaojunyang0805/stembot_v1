{
  "name": "stembot_v1",
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "regions": ["ams1", "iad1"],
  "functions": {
    "src/app/**/*.ts": {
      "maxDuration": 30,
      "memory": 1024
    },
    "src/app/**/*.tsx": {
      "maxDuration": 30,
      "memory": 1024
    }
  },
  "build": {
    "env": {
      "BUILD_OPTIMIZATION": "true",
      "NODE_ENV": "production",
      "NEXT_TELEMETRY_DISABLED": "1",
      "BUILD_VERSION": "$VERCEL_GIT_COMMIT_SHA",
      "DEPLOYMENT_ENV": "$VERCEL_ENV",
      "FORCE_DOMAIN_UPDATE": "v14-VERCEL-CONFIG-FIX-IMMEDIATE-UPDATE"
    }
  },
  "rewrites": [
    {
      "source": "/dashboard/:path*",
      "destination": "/dashboard/:path*"
    },
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate, max-age=0, s-maxage=0"
        },
        {
          "key": "Pragma",
          "value": "no-cache"
        },
        {
          "key": "Expires",
          "value": "0"
        },
        {
          "key": "X-App-Version",
          "value": "$VERCEL_GIT_COMMIT_SHA"
        }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        },
        {
          "key": "X-API-Version",
          "value": "$VERCEL_GIT_COMMIT_SHA"
        }
      ]
    }
  ],
  "cleanUrls": true,
  "trailingSlash": false,
  "crons": [
    {
      "path": "/api/invalidate-cache",
      "schedule": "*/5 * * * *"
    }
  ]
}