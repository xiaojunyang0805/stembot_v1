{
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "regions": ["iad1"],
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node@3",
      "config": {
        "includeFiles": "**",
        "zeroConfig": true
      }
    }
  ],
  "functions": {
    "src/app/**/*.ts": {
      "maxDuration": 30,
      "memory": 1024
    },
    "src/app/**/*.tsx": {
      "maxDuration": 30,
      "memory": 1024
    }
  },
  "build": {
    "env": {
      "BUILD_OPTIMIZATION": "true",
      "NODE_ENV": "production",
      "NEXT_TELEMETRY_DISABLED": "1",
      "BUILD_VERSION": "$VERCEL_GIT_COMMIT_SHA",
      "DEPLOYMENT_ENV": "$VERCEL_ENV"
    }
  },
  "env": {
    "BUILD_DATE": "@now",
    "VERCEL_GIT_COMMIT_SHA": "@vercel-git-commit-sha",
    "VERCEL_ENV": "@vercel-env",
    "APP_VERSION": "@vercel-git-commit-sha"
  },
  "rewrites": [
    {
      "source": "/dashboard/:path*",
      "destination": "/dashboard/:path*"
    },
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        },
        {
          "key": "X-App-Version",
          "value": "$VERCEL_GIT_COMMIT_SHA"
        }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        },
        {
          "key": "X-API-Version",
          "value": "$VERCEL_GIT_COMMIT_SHA"
        }
      ]
    }
  ],
  "cleanUrls": true,
  "trailingSlash": false
}