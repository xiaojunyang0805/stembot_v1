# StemBot v1 Public Repository - Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# ⚠️ IMPORTANT: This is the PUBLIC repository
# NO sensitive data, API keys, or secrets should be in this file
# All sensitive configuration is handled in the private repository

# ===========================================
# INTEGRATION WITH PRIVATE CORE
# ===========================================
# Method for integrating with private repository
# Options: 'submodule', 'npm-package', 'api', 'env-based', 'mock'
INTEGRATION_METHOD=mock

# Private repository configuration (for development)
PRIVATE_REPO_URL=https://github.com/yourusername/stembot-mvp-core.git
PRIVATE_REPO_BRANCH=main

# API integration (for production deployment)
NEXT_PUBLIC_API_URL=https://api.stembot.app
API_VERSION=v1

# ===========================================
# PUBLIC APP CONFIGURATION
# ===========================================
# Application URL and basic settings (safe for public)
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=StemBot MVP
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_ENVIRONMENT=development

# ===========================================
# DEVELOPMENT CONFIGURATION
# ===========================================
# Mock data usage (for development without private core)
USE_MOCKS=true
DEBUG_INTEGRATION=false
FALLBACK_TO_MOCKS=true

# Feature flags for public components
ENABLE_PUBLIC_FEATURES=true
SHOW_INTEGRATION_STATUS=true

# ===========================================
# DEPLOYMENT SETTINGS
# ===========================================
NODE_ENV=development
VERCEL_URL=
VERCEL_ENV=

# ===========================================
# ADVANCED DOCUMENT INTELLIGENCE CONFIG
# ===========================================
# Ollama Configuration (Local AI Processing)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_DEFAULT_MODEL=llama3.2:3b

# Pinecone Configuration (for vector embeddings)
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_INDEX_NAME=stembot-documents
PINECONE_MEMORY_INDEX=stembot-memory

# Document Processing Limits
MAX_FILE_SIZE_MB=50
PROCESSING_TIMEOUT_MINUTES=30

# Feature Toggles
ENABLE_RESEARCH_ANALYSIS=true
ENABLE_EXPERIMENTAL_ANALYSIS=true
ENABLE_CROSS_ANALYSIS=true
ENABLE_MEMORY_SYSTEM=true

# ===========================================
# OPTIONAL THIRD-PARTY SERVICES
# ===========================================
# Analytics (only if needed for public features)
NEXT_PUBLIC_ANALYTICS_ID=
ENABLE_ANALYTICS=false

# Error tracking (only for frontend errors)
NEXT_PUBLIC_SENTRY_DSN=
ENABLE_ERROR_TRACKING=false

# ===========================================
# SUPABASE CONFIGURATION
# ===========================================
# Your Supabase project URL (found in Project Settings → API)
NEXT_PUBLIC_SUPABASE_URL=https://kutpbtpdgptcmrlabekq.supabase.co

# Supabase anonymous key (safe for client-side, found in Project Settings → API)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Supabase service role key (NEVER expose in client code, found in Project Settings → API)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ===========================================
# STRIPE BILLING CONFIGURATION (WP6.1)
# ===========================================
# Stripe secret key (NEVER expose in client code, from Stripe Dashboard → Developers → API keys)
# Use sk_test_... for development, sk_live_... for production
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Stripe publishable key (safe for client-side, from Stripe Dashboard → Developers → API keys)
# Use pk_test_... for development, pk_live_... for production
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Stripe webhook signing secret (from Stripe Dashboard → Developers → Webhooks)
# Different for each webhook endpoint you create
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Stripe Price IDs for subscription products
# Student Pro: €10/month (from Stripe Dashboard → Products)
STRIPE_STUDENT_PRO_PRICE_ID=price_xxxxxxxxxxxxxxxxxxxxxxxxx

# Researcher: €25/month (from Stripe Dashboard → Products)
STRIPE_RESEARCHER_PRICE_ID=price_xxxxxxxxxxxxxxxxxxxxxxxxx

# ===========================================
# SECURITY NOTES
# ===========================================
# ⚠️ NEVER COMMIT .env.local TO VERSION CONTROL
# - Database credentials
# - API keys or secrets
# - Authentication tokens
# - Payment processing keys
# - AI service credentials
# - Any sensitive business logic configuration
#
# ✅ FOR PRODUCTION DEPLOYMENT:
# Add all variables to Vercel Dashboard → Settings → Environment Variables